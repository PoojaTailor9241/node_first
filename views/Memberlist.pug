doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")

        title All Members
    body.bg-secondary
        center 
            a.text-warning(href="/member/add") Add new Member 
            br
            div.container
                table.table.table-dark.table-striped.shadow-lg.rounded
                    tr
                        th Name
                        th Photo 
                        th Age 
                        th Email 
                        th Edit 
                        th Delete
                    br
                    if data == true 
                        for mb in MemberList 
                            tr 
                                td= mb.name 
                                td
                                    img(src=`/images/${mb.photo}`, alt="No Image" style="width:100px; height:100px")
                                td= mb.age 
                                td= mb.email
                                td 
                                    a.btn.btn-warning(href=`/member/${mb._id}`) Edit 
                                td 
                                    a.btn.btn-danger(href=`/member/delete/${mb._id}`) Delete 