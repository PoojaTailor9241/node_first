doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")

        title Add Member
    body.bg.secondary
        center 
            h1= "Add Member"
            form(action="/member/add", method="post" enctype="multipart/form-data") 
                table 
                    tr 
                        th.form-label Name 
                        td 
                            input.form-control.rounded.shadow-lg.mx-2(type="text", name="name") 
                    br
                    tr 
                        th.form-label Photo 
                        td 
                            input.form-control.rounded.shadow-lg.mx-2(type="file", name="photo")
                    br
                    tr 
                        th.form-label Age 
                        td 
                            input.form-control.rounded.shadow-lg.mx-2(type="number", name="age")
                    br
                    tr 
                        th.form-label Email 
                        td 
                            input.form-control.rounded.shadow-lg.mx-2(type="text", name="email")
                    br
                    tr 
                        td 
                        td 
                            input.btn.btn-success.rounded.shadow-lg(type="submit", value="Add")
                    